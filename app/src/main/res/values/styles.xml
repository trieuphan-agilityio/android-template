<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@null</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:colorBackground">@color/white_two</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="FontBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="FontMedium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="FontRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--  Style for picker dialog  -->
    <style name="PickerDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  Edittext  -->
    <declare-styleable name="NormalEditText">
        <attr name="normalPattern" format="string" />
        <attr name="normalPrefix" format="string" />
        <attr name="normalButtonFocusId" format="reference" />
        <attr name="normalIsFocus" format="boolean" />
    </declare-styleable>

    <!--  Validate editText layout  -->
    <declare-styleable name="EditText">
        <attr name="typeEditText" format="enum">
            <enum name="Normal" value="0" />
            <enum name="Password" value="1" />
            <enum name="Prefix" value="2" />
        </attr>
        <attr name="pattern" format="string" />
        <attr name="prefix" format="string" />
        <attr name="heightEditText" format="dimension" />
        <attr name="buttonFocusId" format="reference" />
        <attr name="backgroundRes" format="reference" />
        <attr name="isFocus" format="boolean" />
        <attr name="android:imeOptions" />
        <attr name="android:inputType" />
        <attr name="android:gravity" />
        <attr name="android:maxLength" />
        <attr name="android:maxLines" />
        <attr name="android:nextFocusDown" />
        <attr name="android:hint" />
        <attr name="android:focusable" />
        <attr name="android:digits" />
        <attr name="android:textColor" />
        <attr name="paddingTop" format="dimension" />
    </declare-styleable>

    <style name="EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/body_14</item>
        <item name="android:textColorHint">@color/brown_grey_60</item>
        <item name="android:paddingStart">@dimen/padding_10</item>
        <item name="android:paddingEnd">@dimen/padding_10</item>
        <item name="android:layout_height">@dimen/height_50</item>
        <item name="android:minWidth">@dimen/min_width_2</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:font" tools:targetApi="o">@font/roboto_light</item>
    </style>

    <style name="EditTextBase">
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
    </style>

    <style name="InputError">
        <item name="android:textColor">@color/color_error</item>
    </style>

    <style name="TextNormalGrey">
        <item name="android:textColor">@color/color_text_grey</item>
        <item name="android:textSize">@dimen/body_14</item>
    </style>

    <declare-styleable name="InputLayout">
        <attr name="textHint" format="string" />
        <attr name="hintColor" format="color" />
        <attr name="focusDefault" format="boolean" />
        <attr name="android:inputType" />
        <attr name="maxLine" format="integer" />
        <attr name="android:maxLength" />
        <attr name="android:text" />
        <attr name="android:enabled" />
        <attr name="android:gravity" />
    </declare-styleable>

    <declare-styleable name="ValidateInputLayout">
        <attr name="showErrorIcon" format="boolean" />
        <attr name="errorIcon" format="reference" />
        <attr name="errorColor" format="color" />
        <attr name="validIcon" format="reference" />
    </declare-styleable>

    <!--  Button  -->
    <declare-styleable name="Button">
        <attr name="isConfigAlignParentBottom" format="boolean" />
        <attr name="parentId" format="reference" />
        <attr name="margin" format="dimension" />
        <attr name="typeLayout" format="enum">
            <enum name="RelativeLayout" value="0" />
            <enum name="ConstrainLayout" value="1" />
        </attr>
    </declare-styleable>

</resources>
